{
  "name": "Candle",
  "version": "1.0.0",
  "description": "Server/client software for controlling chrome instances remotely",
  "main": "index.js",
  "scripts": {
    "build-server": "cd server/ && ../node_modules/bower/bin/bower install && cd ..",
    "build-client": "cd client/ && ../node_modules/bower/bin/bower install && cd ..",
    "install-all": "npm install && npm run build-server && npm run build-client",
    "install-server": "npm install && npm run build-server",
    "install-client": "npm install && npm run build-client",
    "start": "node server/server.js",
    "test": "npm run install-all"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bnookala/candle"
  },
  "author": "Bhargav Nookala <nooknb@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bnookala/candle/issues"
  },
  "homepage": "https://github.com/bnookala/candle",
  "dependencies": {
    "bower": "^1.3.12",
    "express": "^4.10.6",
    "jade": "^1.8.2",
    "socket.io": "1.2.x",
    "underscore": "^1.7.0",
    "yargs": "^1.3.3"
  },
  "devDependencies": {
    "grunt": "^0.4.5"
  }
}
