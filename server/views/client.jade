extends _layout

block head
	title= "Information for " + clientId

block content
	div(class="client-container col-md-12")
		if clientData
			div(class="panel panel-default currently-active")
				div.panel-heading
					h3.panel-title Currently focused tabs on #{clientId}

				div.panel-body
					mixin render_tabs(activePages)

			div(class="panel panel-default all-tabs")
				div.panel-heading
					h3.panel-title All tabs on #{clientId}

				div.panel-body
					mixin render_tabs(clientData)

			div(class="panel panel-default all-windows")
				div.panel-heading
					h3.panel-title Tabs grouped by window on #{clientId}
				div.panel-body
					mixin render_window(windowData)
		else
			div(class='alert alert-info') This client doesn't seem to have any open tabs. (Try reloading the client extension?)

mixin render_tabs(tabs)
	table(class="table table-hover fixed")
		colgroup
			col(width="20%")
			col(width="70%")
			col(width="5%")
			col(width="5%")
			col(width="5%")
		tr
			th Tab title
			th Tab URL
			th ID
			th Index
			th Actions

		for tab in tabs
			tr(class="single-tab")
				td.text-wrapped
					span(title="#{tab.title}") #{tab.title}
				td.text-wrapped
					a(
						class="tab-url"
						href="#{tab.url}"
						title="#{tab.url}"
					)
						span #{tab.url}
				td.text-wrapped #{tab.id}
				td.text-wrapped #{tab.index}
				td
					mixin tab_actions(tab)

mixin tab_actions(tab)
	div(class="dropdown tab-actions")
		button(class="btn btn-default dropdown-toggle", type="button", data-toggle="dropdown")
			span.caret

		ul(class="dropdown-menu dropdown-menu-right")
			li
				a(
					class="js-select"
					href="/client/#{clientId}/select/#{tab.id}"
				)= "Make Active"
			li
				a(
					class="js-close"
					href="/client/#{clientId}/close/#{tab.id}"
				)= "Close"


mixin render_window(windowData)
	div
		windowData

mixin window_actions(windowId, window)
	div.window-actions
		h4 Window Options
		ul
			li
				form.new-url
					input(
						class="window-action new-url-input"
						type="text"
						placeholder="Enter a url to open"
						size="100"
					)
					input(
						value="Open"
						class="window-action new-url-submit"
						type="submit"
						action="/client/#{clientId}/newtab/#{windowId}"
					)
			li
				a(
					class="window-action toggle-rotate"
					href="/client/#{clientId}/rotate/#{windowId}"
				)= "Toggle rotation"

block append scripts
	script(src="/public/js/client.js")

block append css
	link(
		rel="stylesheet"
		type="text/css"
		href="/public/css/client.css"
	)
